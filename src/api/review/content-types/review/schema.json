{
  "kind": "collectionType",
  "collectionName": "reviews",
  "info": {
    "singularName": "review",
    "pluralName": "reviews",
    "displayName": "Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "business": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::business.business",
      "inversedBy": "reviews"
    },
    "rating": {
      "type": "integer",
      "required": true,
      "min": 0,
      "max": 5
    },
    "title": {
      "type": "string"
    },
    "content": {
      "type": "richtext"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "reviewStatus": {
      "type": "enumeration",
      "enum": [
        "pending",
        "approved",
        "rejected"
      ]
    },
    "helpful": {
      "type": "integer",
      "default": 0
    },
    "notHelpful": {
      "type": "integer",
      "default": 0
    },
    "verifiedPurchase": {
      "type": "boolean",
      "default": false
    },
    "visitDate": {
      "type": "date"
    }
  }
}
